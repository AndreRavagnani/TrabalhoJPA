	<!-- As Avaliações que possuem Issues com mais de 3 votos -->
	<named-query name="Avaliacao.issuesAcima3Votos">
		<query>
		SELECT DISTINCT a FROM Avaliacao a 
		JOIN TREAT( a.itensAvaliacao as Issue) i
		HAVING COUNT(i) > 3
        	 
        </query>
	</named-query>

